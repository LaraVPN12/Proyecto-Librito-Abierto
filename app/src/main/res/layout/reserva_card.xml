<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#dee2e6"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            //Tipo de Transaccion

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Tipo de Transacción:" />

                <TextView
                    android:id="@+id/transaction_type_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prestamo"
                    android:textColor="@color/black" />
            </LinearLayout>
            //Titulo

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Título del Libro:" />

                <TextView
                    android:id="@+id/book_title_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IT ENDS WITH US"
                    android:textColor="@color/black" />
            </LinearLayout>

            //Cantidad de Ejemplares

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Cantidad de Ejemplares:" />

                <TextView
                    android:id="@+id/copy_quantity_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black" />
            </LinearLayout>

            //Fecha de Prestamo

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Fecha de Préstamo:" />

                <TextView
                    android:id="@+id/fecha_prestamo_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20-03-2022"
                    android:textColor="@color/black" />
            </LinearLayout>
            //Fecha de Devolucion

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Fecha de Devolución" />

                <TextView
                    android:id="@+id/fecha_devolucion_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21-03-2022"
                    android:textColor="@color/black" />
            </LinearLayout>

            //Estado
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Estado:" />

                <TextView
                    android:id="@+id/state_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:textColor="@color/black" />
            </LinearLayout>
            <Button
                android:id="@+id/efectuarPrestamo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/black"
                android:text="Efectuar Préstamo"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>